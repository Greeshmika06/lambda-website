---
import PageLayout from "../layouts/PageLayout.astro";
import { SITE } from "@consts";
---

<PageLayout title="404: Not Found" description="Oops! The page you're looking for doesn't exist.">
  <div class="flex flex-col items-center justify-center min-h-screen bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 text-white px-4 py-10">
    <div class="flex flex-col items-center">
      <h1 class="text-8xl font-extrabold mb-6 animate-bounce">404</h1>
      <h2 class="text-4xl font-semibold mb-8 animate-fadeIn">Page Not Found</h2>
      <p class="text-xl mb-8 max-w-2xl text-center">
        Oops! The page you're looking for doesn't exist or might have been moved.
      </p>

      <div class="space-y-6 max-w-lg text-lg text-center">
        <p class="text-lg">Here are some helpful links:</p>
        <ul class="list-inside space-y-4">
          <li><a href="/" class="text-blue-300 hover:text-blue-500 transition-all">Home</a></li>
          <li><a href="/blog" class="text-blue-300 hover:text-blue-500 transition-all">Blog</a></li>
          <li><a href="/projects" class="text-blue-300 hover:text-blue-500 transition-all">Projects</a></li>
          <li><a href="/contact" class="text-blue-300 hover:text-blue-500 transition-all">Contact</a></li>
        </ul>
      </div>
      
      <div class="mt-10">
        <a href="/" class="px-8 py-4 bg-gradient-to-r from-blue-500 to-teal-400 text-white font-semibold rounded-lg shadow-lg hover:scale-105 transform transition-all duration-300 ease-out">
          Back to Home
        </a>
      </div>
    </div>
  </div>
</PageLayout>

