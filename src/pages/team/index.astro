---
import PageLayout from "../../layouts/PageLayout.astro";
import { Boxes } from "../../components/ui/background-boxes";
import TeamSection from "../../components/team/TeamSection.astro";
import { Image } from "astro:assets";
import { mentors, heads, cores, uiux } from "./data";
---

<PageLayout
  title="Our Team | Lambda Dev Club"
  description="Meet the amazing team behind Lambda Dev Club at IIT Hyderabad"
>
  <div class="relative min-h-screen bg-black overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 opacity-30">
        <Boxes client:load />
      </div>
      <div
        class="absolute inset-0 bg-gradient-to-b from-black via-transparent to-black"
      >
      </div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto py-8 sm:py-16">
      <div class="text-center mb-12 sm:mb-20 px-4">
        <h1 class="text-4xl sm:text-7xl font-black animate-title">
          <span
            class="bg-clip-text text-transparent bg-gradient-to-r from-purple-500 via-pink-400 to-purple-500 animate-shimmer inline-block"
          >
            Our Team
          </span>
        </h1>
      </div>

      <div class="space-y-16">
        {
          mentors.length > 0 && (
            <section>
              <h2 class="text-3xl font-bold text-center text-violet-400 mb-8">
                Mentors
              </h2>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-8 px-4">
                {mentors.map((member) => (
                  <div class="flex items-center space-x-4 bg-black/50 p-6 rounded-lg">
                    <Image
                      src={member.image}
                      alt={member.name}
                      width={100}
                      height={100}
                      class="rounded-full"
                    />
                    <div>
                      <h3 class="text-xl font-semibold text-white">
                        {member.name}
                      </h3>
                      <p class="text-violet-400">{member.role}</p>
                    </div>
                  </div>
                ))}
              </div>
            </section>
          )
        }

        <TeamSection
          title="Club Heads"
          members={heads}
          columns="grid-cols-1 md:grid-cols-2"
          isHeadSection={true}
          isPriority={true}
        />

        <TeamSection title="Core Members" members={cores} />

        {
          uiux.length > 0 && (
            <TeamSection
              title="UI/UX Team"
              members={uiux}
              columns="grid-cols-1 md:grid-cols-3"
            />
          )
        }
      </div>
    </div>
  </div>
</PageLayout>

<style>
  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: #000000;
  }

  ::-webkit-scrollbar-thumb {
    background: #4c1d95;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #6d28d9;
  }

  /* Prevent background boxes from causing horizontal scroll */
  body {
    overflow-x: hidden;
  }

  @keyframes title {
    0% {
      opacity: 0;
      transform: translateY(-20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-title {
    animation: title 1s ease-out forwards;
  }
</style>
