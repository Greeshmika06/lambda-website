---
import PageLayout from "@layouts/PageLayout.astro";
import TopLayout from "@layouts/TopLayout.astro";
import BottomLayout from "@layouts/BottomLayout.astro";
import { CONTACT } from "@consts";
import ContactForm from "@components/react/ContactForm.tsx"; // Import the React component
---

<PageLayout title={CONTACT.TITLE} description={CONTACT.DESCRIPTION}>
  <div class="relative min-h-screen bg-gradient-to-b from-purple-50 to-white dark:from-purple-950 dark:to-black">
    <div class="absolute inset-0 bg-gradient-to-tr from-purple-500/5 via-transparent to-purple-500/5 dark:from-purple-900/20 dark:via-transparent dark:to-purple-900/20 pointer-events-none"></div>
    <div class="absolute inset-0 bg-[url('/grid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))] dark:bg-[url('/grid-dark.svg')] pointer-events-none opacity-50"></div>

    <TopLayout />

    <BottomLayout>
      <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl sm:text-4xl md:text-6xl dark:text-gray-100 font-extrabold leading-9 sm:leading-10 md:leading-14 tracking-tight pb-2 animate-fadeIn">
          Contact Us
        </h1>
        <hr class="border-t-2 border-purple-200 dark:border-purple-800 mb-8"/>

        <div class="grid md:grid-cols-2 gap-8 animate-fadeIn">
          <!-- Contact Information Section -->
          <section class="prose dark:prose-invert max-w-none text-gray-800 dark:text-gray-100 text-lg">
            <h2 class="text-2xl font-bold mt-4 mb-4 text-violet-600 dark:text-violet-400">
              Get in Touch
            </h2>
            <p>
              We're here to help! Whether you have a question, feedback, or need support,
              don't hesitate to reach out to us.
            </p>

            <div class="space-y-4 mt-6">
              <div>
                <h3 class="text-xl font-semibold text-violet-600 dark:text-violet-400">Email</h3>
                <a href="mailto:lambda@iith.ac.in" class="text-purple-700 dark:text-purple-300 hover:underline flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2-2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                    <polyline points="22,6 12,13 2,6"></polyline>
                  </svg>
                  lambda@iith.ac.in
                </a>
              </div>

              <div>
                <h3 class="text-xl font-semibold text-violet-600 dark:text-violet-400">Phone</h3>
                <a
                  href="tel:+918714081616"
                  class="text-purple-700 dark:text-purple-300 hover:underline flex items-center"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                  </svg>
                  +91 8714081616
                </a>
              </div>

              <div>
                <h3 class="text-xl font-semibold text-violet-600 dark:text-violet-400">Website</h3>
                <a href="https://iith.dev" target="_blank" rel="noopener noreferrer" class="text-purple-700 dark:text-purple-300 hover:underline flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="2" y1="12" x2="22" y2="12"></line>
                    <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
                  </svg>
                  https://iith.dev
                </a>
              </div>
            </div>
          </section>

          <!-- React Contact Form -->
          <ContactForm client:only="react" />

        </div>
      </div>
    </BottomLayout>
  </div>
</PageLayout>
