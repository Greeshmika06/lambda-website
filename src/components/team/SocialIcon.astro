---
interface Props {
  type: "github" | "linkedin" | "twitter" | "instagram" | "email";
  href: string;
}

const { type, href } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="group transition-all duration-300 hover:scale-125"
  title={`Visit ${type} profile`}
>
  <svg
    class="w-6 h-6 fill-purple-300/80 group-hover:fill-purple-400 transition-colors duration-300"
    aria-hidden="true"
  >
    <use href={`/social.svg#${type}`}></use>
  </svg>
</a>
